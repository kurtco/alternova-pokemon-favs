{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@context/*": ["src/context/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "metro.config.js"
  ]
}
